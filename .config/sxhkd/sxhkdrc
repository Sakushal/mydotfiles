
# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd



# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close Window
super + q
	bspc node -c

# Toggle fullscreen
super + f
	bspc desktop -l next

# Switch to tiling mode
super + t
	bspc node -t tiled

# Switch to floating mode
super + s
	bspc node -t floating


# FOCUS/SWAP

# Focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Swap window in given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Switch to previous or next desktop
super + {Left,Right}
	bspc desktop -f {prev,next}.local

# Move Window to previous or next desktop
super + shift + {Left,Right}
	bspc node -d {prev,next}.local

# Switch to the last desktop
super + Tab
	bspc desktop -f last

# Switch to given desktop
super + {1-9,0}
	bspc desktop -f focused:'^{1-9,10}'

# Move Window to given desktop
super + shift + {1-9,0}
	bspc node -d focused:'^{1-9,10}'


# MOVE/RESIZE

# move a floating window
super + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# expand a window by moving one of its side outward
ctrl + shift + {Left}
	bspc node -z {left -20 0}

# contract a window by moving one of its side inward
ctrl + shift + {Right}
	bspc node -z {right 20 0}


# APPLICATIONS

super + Return
	alacritty

super + e
	dolphin

super + w 
	firefox

super + space
	rofi -disable-history -drun-match-fields name -show drun
ctrl + space
    rofi -show power-menu -modi power-menu:rofi-power-menu
	
super + c
	code

super + s 
	spotify

super + .
	rofi -show emoji
super + shift + s
	scrot --select --line mode=edge '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f && rm $f'

@Print
scrot '$HOME/Pictures/%Y-%m-%d-%T-screenshot.png'

#super + l

# printscreen
@Print
	scrot -s --line mode=edge ~/Pictures/Screenshots/%Y-%m-%d_%H%M%S-$wx$h_scrot.png

shift + @Print
	screenshot select

control + @Print
	screenshot window

XF86MonBrightness{Up,Down}  
  brightnessctl s 10{+,-}  
 
XF86Audio{Raise,Lower}Volume  
  pulsemixer --change-volume {+,-}10  
 
XF86AudioMute  
  pulsemixer  --toggle-mute




    
    


